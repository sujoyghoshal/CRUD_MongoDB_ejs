                        <!-- stylist -->

                        <!DOCTYPE html>
                        <html lang="en">
                        <head>
                            <meta charset="UTF-8">
                            <meta name="viewport" content="width=device-width, initial-scale=1.0">
                            <title>Store Data</title>
                            <style>
                                body {
                                    font-family: Arial, sans-serif;
                                    background-color: #f0f0f0;
                                    margin: 0;
                                    padding: 0;
                                    text-align: center;
                                }
                        
                                h1 {
                                    background-color: #333;
                                    color: white;
                                    padding: 20px 0;
                                    margin: 0;
                                }
                        
                                .container {
                                    max-width: 400px;
                                    margin: 20px auto;
                                    padding: 20px;
                                    background-color: white;
                                    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                                    border-radius: 5px;
                                }
                        
                                form {
                                    text-align: left;
                                }
                        
                                label {
                                    display: block;
                                    font-weight: bold;
                                    margin-bottom: 5px;
                                }
                        
                                input[type="text"],
                                input[type="password"] {
                                    width: 100%;
                                    padding: 10px;
                                    margin-bottom: 10px;
                                    border: 1px solid #ccc;
                                    border-radius: 5px;
                                }
                        
                                input[type="submit"] {
                                    background-color: #333;
                                    color: white;
                                    border: none;
                                    border-radius: 5px;
                                    padding: 10px 20px;
                                    cursor: pointer;
                                }
                        
                                input[type="submit"]:hover {
                                    background-color: #555;
                                }
                            </style>
                        </head>
                        <body>
                            <h1>Store Data</h1>
                            <div class="container">
                                <form action="storeData" method="post">
                                    <label for="username">Username:</label>
                                    <input type="text" id="username" name="username" placeholder="Enter user's name" required><br><br>
                                    
                                    <label for="password">Password:</label>
                                    <input type="password" id="password" name="password" placeholder="Enter the password" required><br><br>
                                    
                                    <input type="submit" value="Submit">
                                </form>
                            </div>
                        </body>
                        </html>
                        